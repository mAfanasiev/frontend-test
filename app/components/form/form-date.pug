.form__field.form__field--date
  h2.form__field-title Exp. Date
  label.form__field-label(for="day")  
    select.form__field-input#day
      option(value="") MM
      option(value="1") 1
      option(value="2") 2
      option(value="3") 3
      option(value="4") 4
      option(value="5") 5
      option(value="6") 6
  span.form__field-line /
  label.form__field-label(for="year")
    select.form__field-input#year
      option(value="") YYYY
      option(value="2019") 2019
      option(value="2018") 2018
      option(value="2017") 2017
      option(value="2016") 2016
      option(value="2015") 2015
      option(value="2014") 2014
